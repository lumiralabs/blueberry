{
  "project": {
    "name": "Build a Todo App with CRUD Operations",
    "description": "Creating a simple Todo application using Next.js and Supabase, which includes functionalities to Create, Read, Update, and Delete tasks.",
    "techStack": [
      "Next.js 14",
      "Supabase",
      "TypeScript",
      "Tailwind CSS"
    ]
  },
  "frontendStructure": {
    "pages": {
      "/": {
        "type": "SSR",
        "components": [
          "Header",
          "TodoList",
          "AddTodo",
          "SearchBar",
          "Filter"
        ],
        "authRequired": true,
        "authRedirect": null,
        "dataFetching": [
          "Fetch current user",
          "Fetch todo items"
        ]
      },
      "/login": {
        "type": "Static",
        "components": [
          "LoginForm"
        ],
        "authRequired": false,
        "authRedirect": null,
        "dataFetching": []
      },
      "/signup": {
        "type": "Static",
        "components": [
          "SignupForm"
        ],
        "authRequired": false,
        "authRedirect": null,
        "dataFetching": []
      },
      "/settings": {
        "type": "Static",
        "components": [
          "Settings"
        ],
        "authRequired": true,
        "authRedirect": null,
        "dataFetching": []
      }
    },
    "components": {
      "shared": [
        "Button",
        "InputField",
        "Modal",
        "Loader",
        "ThemeToggle"
      ],
      "feature": [
        "TodoItem",
        "TodoList",
        "AddTodo",
        "SearchBar",
        "Filter"
      ]
    }
  },
  "apiRoutes": {
    "todo": {
      "/api/todos": {
        "method": "POST",
        "middleware": [
          "auth checks"
        ],
        "validation": [
          "task: required",
          "dueDate: optional"
        ],
        "supabase": "supabase.from('todos').insert()",
        "body": null,
        "response": null,
        "pagination": null
      },
      "/api/todos/:id": {
        "method": "DELETE",
        "middleware": [
          "auth checks"
        ],
        "validation": [
          "id: required"
        ],
        "supabase": "supabase.from('todos').delete()",
        "body": null,
        "response": null,
        "pagination": null
      }
    }
  },
  "supabaseConfig": {
    "tables": {
      "todos": {
        "columns": {
          "id": "uuid",
          "task": "text",
          "status": "boolean",
          "due_date": "timestamp",
          "user_id": "uuid",
          "category": "text"
        },
        "RLS": {
          "policy": "user_id = auth.uid()"
        }
      }
    },
    "indexes": [
      "CREATE INDEX idx_user_id ON todos(user_id)",
      "CREATE INDEX idx_due_date ON todos(due_date)"
    ]
  },
  "features": {
    "category": [
      "User authentication with email and social login",
      "CRUD operations for todo items",
      "Real-time updates for task status",
      "Categorization of tasks (e.g., work, personal)",
      "Task due dates and reminders",
      "Search and filtering for tasks",
      "Dark mode and light mode support"
    ]
  },
  "environmentVariables": {
    "SUPABASE_URL": "string",
    "SUPABASE_ANON_KEY": "string"
  },
  "acceptanceCriteria": [
    "User can signup and login using email and social logins.",
    "User can create, read, update, and delete todo items.",
    "Users receive real-time updates on task status.",
    "Users can categorize tasks and set due dates with reminders.",
    "Users can search and filter tasks effectively.",
    "The application supports dark mode and light mode.",
    "Proper error handling is in place for all operations."
  ]
}