{
  "project": {
    "name": "Create Simple To-Do Application",
    "description": "A straightforward to-do application that allows users to create, read, update, and delete their tasks easily.",
    "techStack": [
      "Next.js 14",
      "Supabase",
      "TypeScript",
      "Tailwind CSS"
    ]
  },
  "frontendStructure": {
    "pages": {
      "/": {
        "type": "SSR",
        "components": [
          "Header",
          "TaskList",
          "TaskForm",
          "SearchBar"
        ],
        "authRequired": true,
        "authRedirect": null,
        "dataFetching": [
          "fetch user tasks"
        ]
      },
      "/login": {
        "type": "Static",
        "components": [
          "LoginForm"
        ],
        "authRequired": false,
        "authRedirect": null,
        "dataFetching": []
      },
      "/register": {
        "type": "Static",
        "components": [
          "RegistrationForm"
        ],
        "authRequired": false,
        "authRedirect": null,
        "dataFetching": []
      }
    },
    "components": {
      "shared": [
        "Header",
        "Footer",
        "Button",
        "Input",
        "Modal"
      ],
      "feature": [
        "TaskList",
        "TaskItem",
        "TaskForm",
        "SearchBar",
        "CategoryFilter"
      ]
    }
  },
  "apiRoutes": {
    "todo": {
      "/api/todos": {
        "method": "POST",
        "middleware": [
          "auth checks"
        ],
        "validation": [
          "title",
          "category"
        ],
        "supabase": "insert into todos (title, category, user_id) values ($1, $2, auth.user.id)",
        "body": null,
        "response": null,
        "pagination": null
      },
      "/api/todos/[id]": {
        "method": "DELETE",
        "middleware": [
          "auth checks"
        ],
        "validation": [],
        "supabase": "delete from todos where id = $1 and user_id = auth.user.id",
        "body": null,
        "response": null,
        "pagination": null
      }
    }
  },
  "supabaseConfig": {
    "tables": {
      "todos": {
        "columns": {
          "id": "uuid",
          "title": "text",
          "category": "text",
          "user_id": "uuid",
          "created_at": "timestamp",
          "updated_at": "timestamp"
        },
        "RLS": {
          "policy": "user_id = auth.uid()"
        }
      },
      "users": {
        "columns": {
          "id": "uuid",
          "email": "text",
          "hashed_password": "text",
          "created_at": "timestamp"
        },
        "RLS": {
          "policy": "true"
        }
      }
    },
    "indexes": [
      "CREATE INDEX ON todos (user_id)",
      "CREATE INDEX ON todos (created_at)"
    ]
  },
  "features": {
    "category": [
      "User registration and login with email and password",
      "CRUD functionality for to-do items",
      "Real-time updates using Supabase subscriptions",
      "Task categorization (e.g., personal, work, etc.)",
      "Search functionality for tasks",
      "Responsive design for mobile and desktop"
    ]
  },
  "environmentVariables": {
    "NEXT_PUBLIC_SUPABASE_URL": "string",
    "NEXT_PUBLIC_SUPABASE_ANON_KEY": "string"
  },
  "acceptanceCriteria": [
    "User can register with an email and password.",
    "User can log in and log out.",
    "User can create, read, update, and delete to-do items.",
    "To-do items are categorized by user-defined categories.",
    "Users can search for specific to-do items.",
    "Changes to tasks are updated in real-time for all users.",
    "Application is responsive on mobile and desktop devices."
  ]
}